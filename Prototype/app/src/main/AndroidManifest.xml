<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- Camera & Media Permissions -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- Ensure device has a camera -->
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Prototype"
        tools:targetApi="31">
        <activity
            android:name=".signup.SignUpFinal"
            android:exported="false" /> <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.gms.auth.api.credentials.CREDENTIALS_PROVIDER"
            android:value="com.google.android.gms.auth.api.credentials.Credentials" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyDDwHU3UYIDIeoAeb6uAZWGe0AN8HHpgfw" /> <!-- Login Activity (Entry Point) -->
        <activity
            android:name=".login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Sign Up Activity -->
        <activity android:name=".signup.SignUpActivity" /> <!-- Main Activity (Handles Fragment Navigation) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <activity android:name=".settings.SettingsActivity"
            android:exported="false" />
        <activity
            android:name=".custommap.CreateCustomMap"
            android:exported="false" />

    </application>

</manifest>