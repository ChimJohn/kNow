<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SolidButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="rippleColor">@color/black</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="SettingItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:fontFamily">@font/inter_medium</item>
    </style>

</resources>