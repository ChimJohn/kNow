<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".upload.TakePhotoFragment">

    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Timer Text -->
    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btnRecord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="10dp"/>

    <!-- Camera Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/translucent_white"
        android:padding="10dp"> <!-- Optional: padding to give some space around buttons -->

        <!-- Close Button -->
        <ImageButton
            android:id="@+id/btnClose"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close"
            android:background="?attr/selectableItemBackground" />

        <!-- Flip Camera Button -->
        <ImageButton
            android:id="@+id/btnFlip"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_flip_camera"
            android:background="?attr/selectableItemBackground" />

        <!-- Record Button (Centered) -->
        <ImageButton
            android:id="@+id/btnRecord"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_camera_button"
            android:background="?attr/selectableItemBackground" />

        <!-- Capture Button (Right of Record) -->
        <ImageButton
            android:id="@+id/btnCapture"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_camera_button"
            android:background="?attr/selectableItemBackground" />

        <!-- Flash Button -->
        <ImageButton
            android:id="@+id/btnFlash"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_flash"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
